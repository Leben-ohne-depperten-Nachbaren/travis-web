<LoadMore
  @modelName={{this.loaderModelName}}
  @options={{this.loaderOptions}}
  as |loader|
>
  {{#if loader.isNoneFound}}
    <MissingNotice @title="No {{vcs-vocab this.repo.vcsType 'pullRequest' lower=true}} builds for this repository" />
  {{else}}
    <ul class="build-list">
      {{#each loader.items as |build|}}
        <BuildsItem @build={{build}} />
      {{/each}}
    </ul>
  {{/if}}
</LoadMore>