<UiKit::Grid
  @sm={{2}}
  as |grid|
>
  <grid.item
    @sm='1/4'
    @margin={{hash base=(hash bottom=4) sm=(hash bottom=12)}}
    @padding={{hash x=4}}
  >
    <UiKit::Box @margin={{hash x='auto'}} @maxWidth='sm'>
      <UiKit::Text @color={{this.color}}>
        <SvgImage @name={{this.imageName}} />
      </UiKit::Text>
    </UiKit::Box>
  </grid.item>
  <grid.item
    @sm='3/4'
    @margin={{hash base=(hash bottom=8) sm=(hash bottom=12)}}
    @padding={{hash x=4}}
  >
    <UiKit::Text @color={{this.color}} @size='2xl' @weight='light'>
      {{this.title}}
    </UiKit::Text>
    <UiKit::Box>{{yield}}</UiKit::Box>
  </grid.item>
</UiKit::Grid>