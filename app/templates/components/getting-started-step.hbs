<UiKit::Box
  @display='flex'
  @flexDir={{hash base='row' sm=this.smDir}}
>
  {{!-- Image --}}
  <UiKit::Box
    @margin={{hash base=(hash bottom=4) sm=(hash bottom=12)}}
    @padding={{hash x=4}}
    @width={{hash sm='1/4'}}
  >
    <UiKit::Box @margin={{hash x='auto'}} @maxWidth='sm'>
      <UiKit::Text @color={{this.color}}>
        <SvgImage @name={{this.imageName}} />
      </UiKit::Text>
    </UiKit::Box>
  </UiKit::Box>

  {{!-- Text --}}
  <UiKit::Box
    @margin={{hash base=(hash bottom=8) sm=(hash bottom=12)}}
    @padding={{hash x=4}}
    @width={{hash sm='3/4'}}
  >
    {{!-- Title --}}
    <UiKit::Grid @align='center' @base='auto' @justify='start' @wrap='no-wrap' as |titleGrid|>
      <titleGrid.item @margin={{hash right=2}}>
        <UiKit::Box
          @color={{this.color}}
          @display='flex'
          @flexAlign='center'
          @flexJustify='center'
          @radius='full'
          @width={{8}}
          @height={{8}}
        >
          <UiKit::Text @color='white' @size='xl' @weight='light'>{{this.number}}</UiKit::Text>
        </UiKit::Box>
      </titleGrid.item>
      <titleGrid.item>
        <UiKit::Text @color={{this.color}} @size='2xl' @weight='light'>
          {{this.title}}
        </UiKit::Text>
      </titleGrid.item>
    </UiKit::Grid>

    {{!-- Content --}}
    <UiKit::Box>{{yield}}</UiKit::Box>
  </UiKit::Box>
</UiKit::Box>