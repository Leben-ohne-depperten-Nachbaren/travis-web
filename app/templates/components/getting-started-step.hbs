<UiKit::Grid
  @gap={{4}}
  @sm={{2}}
  as |grid|
>
  <grid.item @sm='1/4'>
    <UiKit::Text @color={{this.color}} @size='xl' @weight='light'>
      <SvgImage @name={{this.imageName}} />
    </UiKit::Text>
  </grid.item>
  <grid.item @sm='3/4'>
    <UiKit::Text @color={{this.color}} @size='xl' @weight='light'>
      {{this.title}}
    </UiKit::Text>
    <UiKit::Box>{{yield}}</UiKit::Box>
  </grid.item>
</UiKit::Grid>