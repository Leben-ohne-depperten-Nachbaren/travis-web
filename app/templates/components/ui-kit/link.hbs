{{#if this.route ~}}
  <LinkTo
    @route={{this.route}}
    class={{this.allClasses}}
    ...attributes
  ><UiKit::Text
      @tag='span'
      @color={{this.color}}
      @line={{this.line}}
    >{{yield}}</UiKit::Text></LinkTo>
{{~else~}}
  <UiKit::Text
    @tag='a'
    @color={{this.color}}
    @line={{this.line}}
    href={{this.href}}
    rel={{this.rel}}
    target={{this.target}}
    ...attributes
  >
    {{~yield~}}
  </UiKit::Text>
{{~/if}}
