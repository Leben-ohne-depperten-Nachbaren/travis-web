{{!-- Header section --}}
<UiKit::Box>
  <UiKit::Box
    @tag='section'
    @margin={{hash bottom=16 x='auto'}}
    @maxWidth='6xl'
    @padding={{hash x=4}}
    data-test-integration-bb-header-section="true"
  >
    <UiKit::Grid @align='center' @gap={{4}} as |grid|>
      <grid.item @sm='full' @md='2/3' @lg='2/3'>
        <UiKit::Text
          @tag='h1'
          @variant='h1'
          @leading={{hash base='none' md='2xs' lg='sm'}}
        >
          Test your Bitbucket
          projects with Travis CI
        </UiKit::Text>
        <UiKit::Text @variant='p'>
          Build, test, and deploy your software seamlessly with the Atlassian Bitbucket
          integration for Travis CI
        </UiKit::Text>
        <UiKit::ButtonSignin @provider='bitbucket' @isSignup={{true}} />
      </grid.item>
      <grid.item @sm='full' @md='1/3' @lg='1/3'>
        <UiKit::Box @maxWidth='sm' @margin={{hash x='auto'}}>
          <SvgImage @name='bb-integrate' />
        </UiKit::Box>
      </grid.item>
    </UiKit::Grid>
  </UiKit::Box>
</UiKit::Box>

{{!-- Highlights section --}}
<UiKit::Box
  @borderWidth={{hash bottom='xs'}}
  @margin={{hash bottom=16}}
>
  <UiKit::Box
    @tag='section'
    @maxWidth='6xl'
    @margin={{hash x='auto'}}
    @padding={{hash x=4 bottom=16}}
    data-test-integration-bb-highlights-section="true"
  >
    <UiKit::Grid @align='center' @gap={{6}} as |grid|>
      {{!-- Row 1 --}}
      <grid.item @sm='6/12' @margin={{hash sm=(hash y=10)}}>
        <UiKit::Box @maxWidth='sm' @margin={{hash x='auto'}}>
          <SvgImage @name='travis-console' />
        </UiKit::Box>
      </grid.item>
      <grid.item @sm='6/12' @margin={{hash base=(hash bottom=10) sm=(hash y=10)}}>
        <UiKit::Text @variant='h2' @color='blue-light'>
          Integrate Bitbucket in seconds
        </UiKit::Text>
        <UiKit::Text>
          Time is important when you're building software. So don't fret,
          we'll spin Travis CI with Bitbucket within seconds.
        </UiKit::Text>
      </grid.item>

      {{!-- Row 2 --}}
      <grid.item @sm='6/12' @margin={{hash base=(hash bottom=4) sm=(hash y=10)}}>
        <UiKit::Text @variant='h2' @color='blue-light'>
          Bitbucket connects with Travis CI
        </UiKit::Text>
        <UiKit::Text>
          Bitbucket lets Travis CI know instantly when something is committed
          and lets the rest happen by itself.
        </UiKit::Text>
      </grid.item>
      <grid.item @sm='6/12' @margin={{hash base=(hash bottom=10) sm=(hash y=10)}}>
        <UiKit::Box @maxWidth='sm' @margin={{hash x='auto'}}>
          <SvgImage @name='bb-connect' />
        </UiKit::Box>
      </grid.item>

      {{!-- Row 3 --}}
      <grid.item @sm='6/12' @margin={{hash sm=(hash y=10)}}>
        <UiKit::Box @maxWidth='sm' @margin={{hash x='auto'}}>
          <SvgImage @name='travis-community' />
        </UiKit::Box>
      </grid.item>
      <grid.item @sm='6/12' @margin={{hash base=(hash bottom=10) sm=(hash y=10)}}>
        <UiKit::Text @variant='h2' @color='blue-light'>
          The Travis CI Community
        </UiKit::Text>
        <UiKit::Text>
          Travis CI has a one of a kind, supportive community which is
          always ready to hear your voice. We're excited to read your
          suggestions, comments, and questions.
        </UiKit::Text>
      </grid.item>
    </UiKit::Grid>

    <UiKit::ButtonSignin @provider='bitbucket' @isSignup={{true}} />
  </UiKit::Box>
</UiKit::Box>

{{!-- Build flow section --}}
<UiKit::Box
  @tag='section'
  @margin={{hash bottom=16 x='auto'}}
  @maxWidth='6xl'
  @padding={{hash x=4}}
  data-test-integration-bb-header-section="true"
>
  <UiKit::Text @variant='h2'>
    Get up and running with Travis CI and Bitbucket in seconds
  </UiKit::Text>

  <UiKit::Box
    @display='flex'
    @margin={{hash x='auto'}}
    @position={{hash type='relative'}}
    @width={{hash base='max-content' md='full'}}
    class="flex-col items-start justify-between md:flex-row md:items-start"
  >
    <UiKit::Box
      @display='flex'
      @margin={{hash base=(hash bottom=4) md=(hash right=4 bottom=0)}}
      class="items-center md:flex-col md:text-center"
    >
      <UiKit::Box @width={{32}} @margin={{hash base=(hash x=4) md=(hash x=0)}}><SvgImage @name='pull-icon-1' /></UiKit::Box>
      <UiKit::Text @width={{32}} @align={{hash md='center'}}>A pull request <br /> is created</UiKit::Text>
    </UiKit::Box>
    <UiKit::Box
      @display='flex'
      @margin={{hash base=(hash y=4) md=(hash x=4 y=0)}}
      class="items-center z-30 md:flex-col md:text-center"
    >
      <UiKit::Box @width={{32}} @margin={{hash base=(hash x=4) md=(hash x=0)}}><SvgImage @name='pull-icon-2' /></UiKit::Box>
      <UiKit::Text @width={{32}} @align={{hash md='center'}}>Cloud platform tells Travis CI <br /> the build is mergeable</UiKit::Text>
    </UiKit::Box>
    <UiKit::Box
      @display='flex'
      @margin={{hash base=(hash y=4) md=(hash x=4 y=0)}}
      class="items-center z-30 md:flex-col md:text-center"
    >
      <UiKit::Box @width={{32}} @margin={{hash base=(hash x=4) md=(hash x=0)}}><SvgImage @name='push-icon-3' /></UiKit::Box>
      <UiKit::Text @width={{32}} @align={{hash md='center'}}>Hooray! <br /> Your build passes!</UiKit::Text>
    </UiKit::Box>
    <UiKit::Box
      @display='flex'
      @margin={{hash base=(hash y=4) md=(hash x=4 y=0)}}
      class="items-center z-30 md:flex-col md:text-center"
    >
      <UiKit::Box @width={{32}} @margin={{hash base=(hash x=4) md=(hash x=0)}}><SvgImage @name='pull-icon-4' /></UiKit::Box>
      <UiKit::Text @width={{32}} @align={{hash md='center'}}>Travis CI updates <br /> the PR that it passed</UiKit::Text>
    </UiKit::Box>
    <UiKit::Box
      @display='flex'
      @margin={{hash base=(hash top=4) md=(hash top=0 left=4)}}
      class="items-center md:flex-col md:text-center"
    >
      <UiKit::Box @width={{32}} @margin={{hash base=(hash x=4) md=(hash x=0)}}><SvgImage @name='pull-icon-5' /></UiKit::Box>
      <UiKit::Text @width={{32}} @align={{hash md='center'}}>You merge in <br /> the PR goodness</UiKit::Text>
    </UiKit::Box>

    <UiKit::Box class='build-flow-diagram__bar absolute w-1 top-0 left-0 bottom-0 md:bottom-auto md:right-0 md:h-1 md:w-auto'>
      <UiKit::Box class='absolute w-5 h-5 bg-grey-150 rounded-full border-white border-md z-10 top-0 -ml-2 -mt-3 md:left-0 md:-ml-4 md:-mt-2'></UiKit::Box>
      <UiKit::Box class='relative bg-grey-150 h-full w-full z-20'></UiKit::Box>
      <UiKit::Box class='absolute w-5 h-5 bg-grey-150 rounded-full border-white border-md z-10 bottom-0 -ml-2 -mb-3 md:right-0 md:ml-0 md:-mr-2 md:-mb-2'></UiKit::Box>
    </UiKit::Box>
  </UiKit::Box>
</UiKit::Box>