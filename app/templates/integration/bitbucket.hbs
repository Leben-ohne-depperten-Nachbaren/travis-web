{{!-- Header section --}}
<UiKit::Box>
  <UiKit::Box
    @tag='section'
    @margin={{hash bottom=16 x='auto'}}
    @maxWidth='6xl'
    @padding={{hash x=4}}
    data-test-integration-bb-header-section="true"
  >
    <UiKit::Grid @gap={{4}} as |grid|>
      <grid.item @sm='2/3'>
        <UiKit::Text @tag='h1' @variant='h1'>
          Test your Bitbucket
          projects with Travis CI
        </UiKit::Text>
        <UiKit::Text>
          Build, test, and deploy your software seamlessly with the Atlassian Bitbucket
          integration for Travis CI
        </UiKit::Text>
        <UiKit::ButtonSignin @provider='bitbucket' />
      </grid.item>
      <grid.item @sm='1/3'>
        <SvgImage @name='bb-integrate' />
      </grid.item>
    </UiKit::Grid>
  </UiKit::Box>
</UiKit::Box>